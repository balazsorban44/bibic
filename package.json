{
  "name": "@bibic/web",
  "description": "Front-end for the small business Bíbic vendégházak in Hungary, Nagybajom.",
  "keywords": [
    "react",
    "firebase"
  ],
  "version": "2.0.0",
  "private": true,
  "dependencies": {
    "@wojtekmaj/react-daterange-picker": "^2.5.0",
    "another-use-form-hook": "^3.2.0",
    "clsx": "^1.0.4",
    "cogo-toast": "^4.1.3",
    "date-fns": "^2.8.1",
    "deep-equal": "^2.0.1",
    "firebase": "^7.6.1",
    "google-map-react": "^1.1.5",
    "i18next": "^19.0.2",
    "query-string": "^6.9.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-flags-select": "^1.1.10",
    "react-i18next": "^11.2.7",
    "react-loadable": "^5.5.0",
    "react-progressive-image": "^0.6.0",
    "react-reveal": "^1.2.2",
    "react-router": "^5.1.2",
    "react-router-dom": "^5.1.2",
    "react-scroll": "^1.7.15",
    "react-scrolllock": "^5.0.0"
  },
  "devDependencies": {
    "@storybook/react": "^5.2.8",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@types/jest": "^24.0.25",
    "@types/node": "^13.1.2",
    "@types/react": "^16.9.17",
    "@types/react-dom": "^16.9.4",
    "coveralls": "^3.0.9",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "node-sass": "^4.13.0",
    "react-scripts": "3.3.0",
    "react-snap": "^1.23.0",
    "source-map-explorer": "^2.2.1",
    "stylelint": "^12.0.1",
    "stylelint-config-recommended": "^3.0.0",
    "typescript": "^3.7.4"
  },
  "scripts": {
    "analyze": "source-map-explorer build/static/js/*.js",
    "start": "react-scripts start",
    "sb": "start-storybook",
    "build": "react-scripts build",
    "_postbuild": "react-snap",
    "deploy": "npm run build && firebase deploy",
    "deploy:beta": "npm run build && firebase -P develop deploy",
    "test": "CI=true react-scripts test --coverage --coverageReporters html",
    "test:watch": "react-scripts test --coverage --coverageReporters html --watchAll",
    "test:coverage": "yarn test --coverage --coverageReporters text-lcov | npx coveralls && rm -rf coverage"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*{js,jsx}",
      "!/node_modules/"
    ]
  }
}
