{
  "name": "@bibic/web",
  "description": "Front-end for the small business Bíbic vendégházak in Hungary, Nagybajom.",
  "keywords": [
    "react",
    "firebase"
  ],
  "version": "2.0.0",
  "private": true,
  "dependencies": {
    "another-use-form-hook": "^3.0.0-beta.3",
    "clsx": "^1.0.4",
    "cogo-toast": "^4.1.1",
    "date-fns": "^2.4.1",
    "deep-equal": "^1.1.0",
    "firebase": "^7.0.0",
    "google-map-react": "^1.1.5",
    "i18next": "^17.0.16",
    "query-string": "^6.8.3",
    "react": "^16.10.1",
    "react-dom": "^16.10.1",
    "react-flags-select": "^1.1.10",
    "react-i18next": "^10.13.1",
    "react-loadable": "^5.5.0",
    "react-reveal": "^1.2.2",
    "react-router": "^5.1.1",
    "react-router-dom": "^5.1.1",
    "react-scroll": "^1.7.14",
    "react-scrolllock": "^4.0.1"
  },
  "devDependencies": {
    "@storybook/react": "^5.2.1",
    "@testing-library/jest-dom": "^4.1.0",
    "@testing-library/react": "^9.2.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.8",
    "@types/react": "^16.9.3",
    "@types/react-dom": "^16.9.1",
    "coveralls": "^3.0.6",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "node-sass": "^4.12.0",
    "react-scripts": "3.0.1",
    "react-snap": "^1.23.0",
    "source-map-explorer": "^2.1.0",
    "stylelint": "^11.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "analyze": "source-map-explorer build/static/js/*.js",
    "start": "react-scripts start",
    "sb": "start-storybook",
    "build": "react-scripts build",
    "postbuild": "react-snap",
    "deploy": "npm run build && firebase deploy",
    "deploy:beta": "npm run build && firebase -P develop deploy",
    "test": "CI=true react-scripts test --coverage --coverageReporters html",
    "test:watch": "react-scripts test --coverage --coverageReporters html --watchAll",
    "test:coverage": "yarn test --coverage --coverageReporters text-lcov | npx coveralls && rm -rf coverage"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*{js,jsx}",
      "!/node_modules/"
    ]
  }
}
