  form(action='https://formspree.io/info@balazsorban.com' method='POST')#reserve-form
      h1 Szobafoglalás
      span.close-form-btn
      fieldset
        legend Személyi adatok
        .field
          label Név
          input.form-name(data-name='name' type='text' name='name' placeholder='Kovács József' required)
        .field
          label E-mail
          input.form-email(data-name='mail' type='email' name='_replyto' placeholder='kovacs.jozsef@email.hu' required)
        .field
          label Telefon
          input.form-tel(data-name='tel' type='tel' placeholder='+36-30-123-4567' required)
      fieldset#reservation-date
        legend Dátumok
        #arrival-date.field
          label Érkezés
          input(data-name='arrive' type='date' date-format='YYYY-MM-DD' required)
        #departure-date.field
          label Távozás
          input(data-name='depart' type='date' required)
      fieldset
        legend Egyéb információ
        .form-text.field
          textarea(data-name='text' placeholder='Írjon nekünk...')
      input(type='hidden' name='_next' value='koszonjuk.html')
      input(type='hidden' name='_subject' value='Új szobafoglalás az oldalon!')
      input(type='hidden' name='_format' value='plain')
      textarea.form-message(name='message')
      input.send-btn(type='submit' value='Küldés')
